    </repository>
    <site>
      <id>tfh-hrz-knabe</id>
      <!--
      <url>scp://hrz.tfh-berlin.de/usr1/doz/knabe/homepage/public_html/java/multex/snapshot/</url>
      -->
      <url>scp://compute.tfh-berlin.de/usr1/doz/knabe/homepage/public_html/java/multex/snapshot/</url>
    </site>
  </distributionManagement>


</project>


